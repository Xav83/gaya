(* Output: 'G!\na!\ny!\na!\nG,a,y,a,' *)

include "sequences"
include "arrays"
include "functions"

(* Works on strings *)
"Gaya"
  |> tosequence(_)
  |> seq.map(_, { c => string.concat(c, "!") })
  |> seq.foreach(_, io.println).

"Gaya"
  |> tosequence(_)
  |> seq.map(_, { c => string.concat(c, ",") })
  |> seq.reduce(_, "", { acc, c => string.concat(acc, c) })
  |> io.println(_).

(* Works in arrays. *)
array.range(1, 10)
  |> tosequence(_)
  |> seq.map(_, { x => x + 1 })
  |> seq.reduce(_, 0, fn.add)
  |> assert(_ == 54).

(* Works on numbers. *)
42
  |> tosequence(_)
  |> seq.reduce(_, 0, fn.add)
  |> assert(_ == 861).
